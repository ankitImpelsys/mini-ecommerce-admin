{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h2 class="mb-4">Category List</h2>

    <a href="{{ path('app_category_new') }}" class="btn btn-success mb-3">âž• Create New</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Name</th>
            <th class="text-center">Description</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td class="text-center">{{ category.id }}</td>
                <td class="text-center">{{ category.name }}</td>
                <td class="text-center">{{ category.description }}</td>
                <td class="text-center">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-info">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
