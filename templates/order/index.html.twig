{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <h2>Orders</h2>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.customerName }}</td>
                <td>{{ order.status }}</td>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">Show</a> |
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">Edit / Change Status</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No orders found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
