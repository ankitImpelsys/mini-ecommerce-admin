{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Orders</h2>
            <a href="{{ path('app_order_new') }}" class="btn-modern btn-success">
                <i class="fas fa-plus"></i>
                Create New Order
            </a>
        </div>
    </div>

    <div class="content-body">
        {% if orders|length > 0 %}
            <div class="table-container">
                <table class="modern-table">
                    <thead>
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th style="width: 200px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><span class="text-muted">#{{ order.id }}</span></td>
                            <td><div class="fw-medium">{{ order.customerName }}</div></td>
                            <td><span class="badge bg-info text-dark">{{ order.status }}</span></td>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn-modern btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn-modern btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon"><i class="fas fa-receipt"></i></div>
                <h3>No Orders Found</h3>
                <p class="text-muted">Start by adding a new order to manage your customer sales.</p>
                <a href="{{ path('app_order_new') }}" class="btn-modern btn-primary">
                    <i class="fas fa-plus"></i> Create First Order
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
