{% block title %}Order Details{% endblock %}

{% block body %}
    <h2>Order Details</h2>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>Customer Name</th>
            <td>{{ order.customerName }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ order.status }}</td>
        </tr>
