{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <div class="content-header mb-4 d-flex justify-content-between align-items-center">
        <h2>Order #{{ order.id }}</h2>
        <a href="{{ path('app_order_index') }}" class="btn-modern btn-secondary">
            ‚Üê Back to list
        </a>
    </div>

    <div class="card p-4 shadow-sm">
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>ID</th>
                <td>#{{ order.id }}</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td>{{ order.customerName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td><span class="badge bg-info text-dark">{{ order.status }}</span></td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-4 d-flex gap-2">
            <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn-modern btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>

            <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}"
                  onsubmit="return confirm('Are you sure you want to delete this order?');" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                <button class="btn-modern btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
        </div>
    </div>
{% endblock %}
