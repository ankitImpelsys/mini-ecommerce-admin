{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <h2>Order Details</h2>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>Customer Name</th>
            <td>{{ order.customerName }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ order.status }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}" class="btn btn-secondary">‚Üê Back to list</a>
    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">Edit</a>
    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
