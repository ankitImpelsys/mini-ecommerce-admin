<h1>Login</h1>

{% if error %}
    <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post">
    <input type="text" name="_username" value="{{ last_username }}" placeholder="Email">
    <input type="password" name="_password" placeholder="Password">
    <button type="submit">Login</button>
</form>
