{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <h2>Product Details</h2>

    <table class="table table-striped">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>₹ {{ product.price }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ product.stock }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if product.imageFilename %}
                    <img src="/uploads/products/{{ product.imageFilename }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 300px;">
                {% else %}
                    <p>No image uploaded</p>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ product.category ? product.category.name : 'None' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">← Back to list</a>
    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
