{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h2>Products</h2>
    <a href="{{ path('app_product_new') }}">Add Product</a>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>
                    <a href="{{ path('app_product_show', {id: product.id}) }}">View</a> |
                    <a href="{{ path('app_product_edit', {id: product.id}) }}">Edit</a> |
                    {{ include('product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
