{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'row g-3'}}) }}

<div class="col-md-6">
    {{ form_label(form.name) }}
    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-md-6">
    {{ form_label(form.price) }}
    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-md-6">
    {{ form_label(form.stock) }}
    {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-md-6">
    {{ form_label(form.category) }}
    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
</div>

<div class="col-12">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
</div>

<div class="col-md-6">
    {{ form_label(form.imageFile) }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-12 mt-3">
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
</div>

{{ form_end(form) }}
